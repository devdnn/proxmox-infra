---
extends: default

rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  line-length:
    max: 160
    level: error
    allow-non-breakable-words: false
    allow-non-breakable-inline-mappings: false
  truthy: disable
  new-line-at-end-of-file: disable
  key-duplicates: disable
  comments:
    level: warning
    require-starting-space: true
    min-spaces-from-content: 1
    ignore-shebangs: true

ignore: |
  .tox/
  .cache/
