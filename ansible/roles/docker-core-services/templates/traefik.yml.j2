---
global:
  checkNewVersion: true
  sendAnonymousUsage: false
serversTransport:
  insecureSkipVerify: true
  maxIdleConnsPerHost: 30
  forwardingTimeouts:
    dialTimeout: 30s
    responseHeaderTimeout: 30s
    idleConnTimeout: 90s
entryPoints:
  ssh:
    address: ':2222'
  web:
    address: ':80'
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
    forwardedHeaders:
      trustedIPs:
        # Cloudflare IPs
        - 173.245.48.0/20
        - 103.21.244.0/22
        - 103.22.200.0/22
        - 103.31.4.0/22
        - 141.101.64.0/18
        - 108.162.192.0/18
        - 190.93.240.0/20
        - 188.114.96.0/20
        - 197.234.240.0/22
        - 198.41.128.0/17
        - 162.158.0.0/15
        - 104.16.0.0/13
        - 104.24.0.0/14
        - 172.64.0.0/13
        - 131.0.72.0/22
        - 2400:cb00::/32
        - 2606:4700::/32
        - 2803:f800::/32
        - 2405:b500::/32
        - 2405:8100::/32
        - 2a06:98c0::/29
        - 2c0f:f248::/32
  websecure:
    address: ':443'
    forwardedHeaders:
      trustedIPs:
        # Cloudflare IPs
        - 173.245.48.0/20
        - 103.21.244.0/22
        - 103.22.200.0/22
        - 103.31.4.0/22
        - 141.101.64.0/18
        - 108.162.192.0/18
        - 190.93.240.0/20
        - 188.114.96.0/20
        - 197.234.240.0/22
        - 198.41.128.0/17
        - 162.158.0.0/15
        - 104.16.0.0/13
        - 104.24.0.0/14
        - 172.64.0.0/13
        - 131.0.72.0/22
        - 2400:cb00::/32
        - 2606:4700::/32
        - 2803:f800::/32
        - 2405:b500::/32
        - 2405:8100::/32
        - 2a06:98c0::/29
        - 2c0f:f248::/32
    http:
      tls:
        certResolver: letsencrypt
        domains:
          - main: {{ docker_core.services.cf_domain_for_core_apps}}
            sans:
              - "{{ '*' ~ '.' ~ docker_core.services.cf_domain_for_core_apps }}"
          - main: {{ docker_core.services.cf_domain_for_all_apps}}
            sans:
              - "{{ '*' ~ '.' ~ docker_core.services.cf_domain_for_all_apps }}"
          - main: {{ docker_core.services.pf_sense_domain }}
          #   middlewares:
          #     -security-headers@file # reference to a dynamic middleware for setting http security headers per default
          #     - rate-limit@file # reference to a dynamic middleware for rate limiting
          #     - compress@file # reference to a dynamic middleware for compressing responses
          #     - latency@file # reference to a dynamic middleware for adding latency to requests
providers:
  docker:
    watch: true
    endpoint: 'unix:///var/run/docker.sock'
    # Default host rule to containername.domain.example
    defaultRule: 'Host(`{{ '{{' }} index .Labels "com.docker.compose.service" {{ '}}' }}`.{{ docker_core.services.cf_domain_for_core_apps }}`)'
    exposedByDefault: false
    network: iac-provisioned-network
  file:
    filename: /etc/traefik/config.yml
    watch: true
api:
  dashboard: true
  debug: false
  insecure: true
log:
  level: INFO
accessLog:
  filePath: /var/log/traefik/access.log
  filters:
    statusCodes:
      - '400-499'
      - '500-599'
    retryAttempts: true
    minDuration: 10ms

certificatesResolvers:
  letsencrypt:
    acme:
      # caServer: https://acme-staging-v02.api.letsencrypt.org/directory
      email: deepakn.dev@gmail.com
      storage: /etc/traefik/acme/acme.json
      dnsChallenge:
        provider: cloudflare
        delayBeforeCheck: '10'
        disablepropagationcheck: true
        resolvers:
          - 1.1.1.1:53
          - 1.0.0.1:53
